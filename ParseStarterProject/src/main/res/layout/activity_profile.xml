<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    tools:context="com.parse.starter.profileActivity">

    <include
        android:id="@+id/profile_page_toolbar"
        layout="@layout/toolbar"></include>

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp"
        app:srcCompat="@drawable/default_image" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="179dp"
        android:text="User Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/userstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        android:text="Status"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/changeImage"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:layout_alignBottom="@+id/userimage"
        android:layout_alignEnd="@+id/userimage"
        android:onClick="changeImage"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageView
        android:id="@+id/changeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/username"
        android:layout_marginEnd="16dp"
        android:onClick="changeName"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageView
        android:id="@+id/changeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userstatus"
        android:layout_alignStart="@+id/changeName"
        android:onClick="changeStatus"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</RelativeLayout>
